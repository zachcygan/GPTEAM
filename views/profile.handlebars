  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col items-center justify-center mt-16">
      <div class="w-full lg:w-4/5 rounded-lg shadow-lg bg-white">
        <div class="flex flex-col md:flex-row">
          <div class="md:w-1/3 p-4 flex justify-center items-center">
            <img class="h-32 w-32 object-cover rounded-full border-4 border-gray-300"
              src="/assets/images/{{avatar_link}}">
          </div>
          <div class="md:w-2/3 p-4">
            <div class="flex flex-row items-center justify-between">
              <h2 class="text-2xl font-bold items-center text-gray-800">{{user.name}}</h2>
            </div>
            <h1>Bio:</h1>
            <textarea contenteditable="true" id="bio" class="text-white-500 mt-4 w-full"> {{user.bio}} </textarea>
            <button id="updateButton" class="mt-2 mr-2 bg-green-500 rounded-full h-6 w-6 text-white hidden" id="save-button">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <path
                  d="M9.413 16.585l-5.5-5.5L3.5 9.5l5.5 5.5L20.5 4.5l1.414 1.414-12.5 12.5z" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
  
   <div class="profile-page">
    <div>
        <h2 class="new-post-title">Create New Post</h2>
        
        <form id="file-upload-form" class="upload-form">
            <input id="document-title" type="text" placeholder="Post Title" class="input input-bordered input-info w-full max-w-xs" />
            <input id="document-text-input" type="text" placeholder="Post Text" class="input input-bordered input-info w-full max-w-xs" />
            <input id="file-input"type="file" class="file-input file-input-bordered file-input-info w-full max-w-xs" />
                <select id="file-industry" class="select select-primary w-full max-w-xs">
                    <option disabled selected>Select Industry</option>
                    <option>Accomodation and Food Services</option>
                    <option>Administration</option>
                    <option>Agriculture, Forestry, Fishing and Hunting</option>
                    <option>Construction</option>
                    <option>Education</option>
                    <option>Finance and Insurance</option>
                    <option>Healthcare</option>
                    <option>Industrial Machinery</option>
                    <option>Information</option>
                    <option>Manufacturing</option>
                    <option>Mining</option>
                    <option>Scientific and Technical Services</option>
                    <option>Real Estate</option>
                    <option>Retail</option>
                    <option>Technology</option>
                    <option>Transportation</option>
                    <option>Utilities</option>
                    <option>Wholesale</option>
                </select>    
                <!-- The button to open modal -->
                    <label for="my-modal" class="btn">submit</label>

                    <input type="checkbox" id="my-modal" class="modal-toggle" />
                    <div class="modal">
                    <div class="modal-box">
                        <h3 class="font-bold text-lg">WARNING!</h3>
                        <p class="py-4">Resumes and cover letters often contain sensetive personal information. If there is information on this post that you are not comfortable sharing to a public site, please cancel and edit the document first</p>
                        <div class="modal-action">
                        <input type="submit" value="Submit" class="btn" />
                        <label for="my-modal" class="btn">Cancel</label>
                        </div>
                    </div>
                    </div>            
                    
        </form>
    </div>  

    <div class="table-grid">
        <div class="overflow-x-auto table-single">
        <h2 class="table-title">Your Posts</h2>
        <table id="document-table" class="table w-full">
            <!-- head -->
            <thead>
            <tr>
                <th></th>
                <th>Post ID</th>
                <th>Title</th>
                <th>Industry</th>
                <th>Date Uploaded</th>
            </tr>
            </thead>
            <tbody>
            {{#each documents as |document|}}
                <tr>
                    <th>
                        <label data-id="{{id}}" class="btn">Delete</label>
                    </th>
                    <td ><a data-fallback="{{id}}" href="/post/question/{{id}}">{{id}}</a></td>
                    <td ><a data-fallback="{{id}}" href="/post/question/{{id}}">{{post_title}}</a></td>
                    <td ><a data-fallback="{{id}}" href="/post/question/{{id}}">{{career_field}}</a></td>
                    <td ><a data-fallback="{{id}}" href="/post/question/{{id}}">{{format_date date_uploaded}}</a></td>
                </tr>
              {{/each}}
            </tbody>
        </table>
        </div>
       </div>
       

<script src="/js/profile.js"></script>