<section class="w-full h-screen bg-cover bg-center bg-no-repeat"
        style="background-image: url('https://source.unsplash.com/random');">
        <div class="w-full h-full bg-black bg-opacity-50 flex items-center justify-center">
            <h1 class="text-4xl md:text-6xl text-white font-bold text-center">
                Welcome to ProjectPerfect
            </h1>
        </div>
</section>

<button id="chat-button"
        class="fixed bottom-8 right-8 bg-indigo-600 text-white font-semibold px-6 py-2 rounded-full shadow-md z-50">
        Chat
</button>

<div id="chat-window" class="hidden fixed bottom-0 right-0 mb-20 mr-8 w-80 h-96 rounded-lg shadow-xl z-50 bg-white">
        <div
            class="h-14 px-4 py-2 bg-indigo-600 text-white font-semibold flex items-center justify-between rounded-t-lg">
            Chat with our Bot
            <button id="close-chat" class="text-white">&times;</button>
        </div>
        <div id="chat-messages" class="overflow-y-scroll p-4 flex flex-col h-72">
            <!-- Chat messages will be added here -->
        </div>
        <form id="chat-form" class="p-4 border-t border-gray-200">
            <input id="chat-input" type="text"
                class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-600"
                placeholder="Type your message here...">
        </form>
</div>